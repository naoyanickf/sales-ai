<section class="home-hero">
  <h1>Sales AI</h1>
  <p>営業支援をスマートにするアプリケーションです。</p>

  <% if user_signed_in? %>
    <p>
      ログイン中:
      <strong><%= current_user.email %></strong>
      (<%= link_to "プロフィール設定", edit_profile_path, class: "profile-link" %>)
    </p>
    <%= button_to "ログアウト", destroy_user_session_path, method: :delete %>

    <div class="workspace-list">
      <h2>参加中のワークスペース</h2>
      <ul>
        <% if @workspace_memberships.any? %>
          <% @workspace_memberships.each do |membership| %>
            <% workspace = membership.workspace %>
            <% next if workspace.nil? %>
            <li>
              <%= workspace.name %>
              <% if membership.admin? %>
                <%= link_to "管理", workspace_path(workspace), class: "workspace-manage-link" %>
              <% end %>
            </li>
          <% end %>
        <% else %>
          <li>参加中のワークスペースはありません。</li>
        <% end %>
      </ul>
    </div>
  <% else %>
    <div class="auth-links">
      <%= link_to "ログイン", new_user_session_path, class: "auth-link" %>
      <%= link_to "新規登録", new_user_registration_path, class: "auth-link" %>
    </div>
  <% end %>
</section>
