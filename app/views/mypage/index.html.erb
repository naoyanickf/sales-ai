<section class="py-5">
  <div class="container">
    <div class="mb-5">
      <p class="text-body-secondary mb-2">ようこそ</p>
      <div class="d-flex flex-wrap justify-content-between align-items-center gap-3">
        <div>
          <h1 class="display-6 fw-bold mb-1">マイページ</h1>
          <p class="mb-0 text-body-secondary"><%= current_user.email %></p>
        </div>
        <div class="d-flex flex-wrap gap-2">
          <%= link_to "プロフィール設定", edit_profile_path, class: "btn btn-outline-secondary btn-lg" %>
          <%= link_to "ワークスペースを作成", new_workspace_path, class: "btn btn-primary btn-lg" %>
        </div>
      </div>
    </div>

    <div class="row gy-4">
      <div class="col-12 col-lg-8">
        <div class="card shadow-sm border-0 h-100">
          <div class="card-body">
            <div class="d-flex flex-wrap justify-content-between align-items-center mb-3">
              <h2 class="fs-4 fw-semibold mb-0">参加中のワークスペース</h2>
              <%= link_to "ワークスペースを作成", new_workspace_path, class: "btn btn-sm btn-outline-primary" %>
            </div>
            <% memberships = Array(@workspace_memberships) %>
            <% if memberships.any? %>
              <div class="list-group">
                <% memberships.each do |membership| %>
                  <% workspace = membership.workspace %>
                  <% next if workspace.nil? %>
                  <div class="list-group-item list-group-item-action d-flex flex-wrap justify-content-between align-items-center gap-3">
                    <div>
                      <p class="mb-0 fw-semibold"><%= workspace.name %></p>
                      <p class="mb-0 text-body-secondary small">
                        役割:
                        <%= membership.admin? ? "管理者" : "参加者" %>
                      </p>
                    </div>
                    <%= link_to "管理ページへ", workspace_path(workspace), class: "btn btn-sm btn-outline-primary" %>
                  </div>
                <% end %>
              </div>
            <% else %>
              <div class="alert alert-info mb-0">
                参加中のワークスペースはまだありません。<%= link_to "新しく作成", new_workspace_path, class: "alert-link" %> してみましょう。
              </div>
            <% end %>
          </div>
        </div>
      </div>

      <div class="col-12 col-lg-4">
        <div class="card shadow-sm border-0 h-100">
          <div class="card-body">
            <h2 class="fs-5 fw-semibold mb-3">アカウント</h2>
            <p class="text-body-secondary small mb-3">プロフィールや通知設定を更新して、自分に合ったSales AIを整えましょう。</p>
            <div class="d-grid gap-2">
              <%= link_to "プロフィールを編集", edit_profile_path, class: "btn btn-outline-secondary" %>
              <%= button_to "ログアウト", destroy_user_session_path, method: :delete, class: "btn btn-link text-danger" %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
