<div class="container py-5">
  <div class="mx-auto" style="max-width: 420px;">
    <div class="card shadow-sm">
      <div class="card-body">
        <h1 class="fs-3 fw-semibold mb-3 text-center">ログイン</h1>
        <p class="text-body-secondary text-center mb-4">アカウントのメールアドレスとパスワードを入力してください。</p>

        <%= render "devise/shared/error_messages", resource: resource %>

        <%= form_with model: resource,
                      scope: resource_name,
                      url: session_path(resource_name) do |form| %>
          <div class="mb-3">
            <%= form.label :email, "メールアドレス", class: "form-label" %>
            <%= form.email_field :email,
                                 autofocus: true,
                                 autocomplete: "email",
                                 class: "form-control" %>
          </div>

          <div class="mb-3">
            <%= form.label :password, "パスワード", class: "form-label" %>
            <%= form.password_field :password,
                                    autocomplete: "current-password",
                                    class: "form-control" %>
          </div>

          <% if devise_mapping.rememberable? %>
            <div class="form-check mb-3">
              <%= form.check_box :remember_me, class: "form-check-input", id: "remember_me" %>
              <%= form.label :remember_me, "ログイン状態を保持する", class: "form-check-label" %>
            </div>
          <% end %>

          <div class="d-grid">
            <%= form.submit "ログイン", class: "btn btn-primary btn-lg" %>
          </div>
        <% end %>

        <div class="mt-4 d-flex justify-content-between flex-wrap gap-2">
          <%= link_to "パスワードをお忘れの方はこちら", new_password_path(resource_name), class: "link-primary small" %>
          <%= link_to "アカウント登録", new_registration_path(resource_name), class: "link-dark small" %>
        </div>
      </div>
    </div>
  </div>
</div>
