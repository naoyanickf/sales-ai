<section class="py-5">
  <div class="container">
    <div class="d-flex flex-wrap justify-content-between align-items-center gap-3 mb-4">
      <div>
        <p class="text-uppercase text-muted small mb-1">Prompt Logs</p>
        <h1 class="h4 mb-0">チャット #<%= @chat.id %> のプロンプト履歴</h1>
        <p class="text-muted small mb-0">最新順で最大100件まで表示します。</p>
      </div>
      <div class="d-flex gap-2">
        <%= link_to "チャットに戻る", chat_path(@chat), class: "btn btn-outline-secondary btn-sm" %>
      </div>
    </div>

    <% if @prompt_logs.any? %>
      <div class="list-group">
        <% @prompt_logs.each_with_index do |log, index| %>
          <% prompt_json = log.payload_pretty %>
          <div class="list-group-item">
            <div class="d-flex justify-content-between align-items-center mb-2">
              <div class="fw-semibold">Prompt #<%= @prompt_logs.size - index %></div>
              <div class="small text-muted">
                <%= l(log.created_at, format: :long) %>
              </div>
            </div>
            <b>User:</b>
            <pre class="small bg-light p-3 rounded" style="white-space: pre-wrap;"><%= prompt_json['prompt'][2]['content'] %></pre>            
            <b>Prompt:</b>
            <pre class="small bg-light p-3 rounded" style="white-space: pre-wrap;"><%= prompt_json['prompt'][1]['content'] %></pre>
            <b>BasePrompt:</b>
            <pre class="small bg-light p-3 rounded" style="white-space: pre-wrap;"><%= prompt_json['prompt'][0]['content'] %></pre>
          </div>
        <% end %>
      </div>
    <% else %>
      <div class="alert alert-info">まだプロンプト履歴がありません。</div>
    <% end %>
  </div>
</section>
